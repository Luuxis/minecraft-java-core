{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        "sourceMap": true,
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "lib": [
            "ES2021",
            "DOM"
        ],
        "declaration": true,
        "outDir": "build",
        "esModuleInterop": true,
        "skipLibCheck": true
    }
}